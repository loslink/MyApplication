<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
xmlns:tools="http://schemas.android.com/tools" 
android:layout_width="match_parent" 
android:layout_height="match_parent" 
 >
<LinearLayout 
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:orientation="horizontal"
    android:background="@color/main_blue" 
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/back_shifu"
    android:background="@drawable/back"
    android:layout_width="20dip"
    android:layout_height="30dip"
    android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
         />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="师傅列表"
    android:textColor="#ffffff"
    android:textSize="@dimen/title_size"
    android:layout_centerInParent="true"
         />
    <ImageView
    android:id="@+id/ivMore"
    android:layout_width="25dip"
    android:layout_height="25dip"
    android:background="@drawable/bt_style_list"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dip"
    />
   </RelativeLayout>
   
   <GridView
        android:id="@+id/page_home_grid_shifu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:gravity="center_horizontal"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dip"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:numColumns="3"/>
</LinearLayout>







</RelativeLayout><!-- From: file:/D:/AndroidStudioWorkspase/MyApplication/RepairService/res/layout/activity_list_shifu.xml -->