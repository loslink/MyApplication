<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:roundProgress="http://schemas.android.com/apk/res/com.itlao.repairservice"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/main_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_complete"
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="问题详情"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/share_iv"
                android:layout_width="37dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/share" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_below="@id/title" >

            <com.itlao.swithcer.GuideGallery
                android:id="@+id/image_wall_gallery_complete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fadingEdge="none"
                android:spacing="1dip"
                android:unselectedAlpha="1" >
            </com.itlao.swithcer.GuideGallery>

            <LinearLayout
                android:id="@+id/gallery_point_linear_complete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="right"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/play_complete"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dip"
            android:background="@drawable/play"
            android:visibility="gone" />

        <com.itlao.utils.util.CircleProgress
            android:id="@+id/roundBar1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dip"
            android:background="@drawable/play"
            roundProgress:Inside_Interval="5"
            roundProgress:Paint_Width="10"
            roundProgress:fill="false"
            roundProgress:max="100" >
        </com.itlao.utils.util.CircleProgress>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/word_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="8.30工作日志：
1.制作优惠券
2.微信小店导入宝贝课程和编辑宝贝课程
3.测试微信支付"
            android:textColor="#77000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/main_brawn"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="状态：已完成"
                android:textSize="@dimen/qdetail_size"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="发布于2014-8-22 22:00"
                android:textSize="@dimen/qdetail_size"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/main_yellow"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="客户反馈：
1.制作优惠券
2.微信小店导入宝贝课程和编辑宝贝课程"
            android:textColor="#77000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/main_yellow"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="师傅反馈：
1.制作优惠券
2.微信小店导入宝贝课程和编辑宝贝课程"
            android:textColor="#77000000" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/AndroidStudioWorkspase/MyApplication/RepairService/res/layout/activity_question_details_complete.xml -->